generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id       Int           @id @default(autoincrement())
  title    String
  summary  String
  ISBN     String        @unique
  authorId Int
  author   Author        @relation(fields: [authorId], references: [id])
  genres   BookToGenre[]
}

model Author {
  id            Int       @id @default(autoincrement())
  first_name    String
  family_name   String
  date_of_birth DateTime
  date_of_death DateTime?
  name          String
  life_span     String
  url           String?
  books         Book[]
}

model Genre {
  id    Int           @id @default(autoincrement())
  name  String        @unique
  books BookToGenre[]
}

model BookToGenre {
  bookId  Int
  genreId Int

  book  Book  @relation(fields: [bookId], references: [id])
  genre Genre @relation(fields: [genreId], references: [id])

  @@id([bookId, genreId])
}
